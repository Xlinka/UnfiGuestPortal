# UniFi Guest Portal Environment Variables
# Development configuration - DO NOT USE IN PRODUCTION

# Node environment
NODE_ENV=development

# Server port
PORT=3881

# Database
MONGODB_URI=mongodb://unifi-guest-panel-mongo:27017/unifi-guest-portal

# JWT for authentication
JWT_SECRET=dev_secret_key_for_testing_only
JWT_EXPIRES_IN=24h

# UniFi Controller settings
UNIFI_CONTROLLER_URL=https://unifi.local
UNIFI_CONTROLLER_PORT=8443
UNIFI_USERNAME=admin
UNIFI_PASSWORD=password
UNIFI_SITE=default
UNIFI_VERIFY_CERTIFICATE=false

# Payment providers
# Stripe
STRIPE_SECRET_KEY=sk_test_default
STRIPE_PUBLISHABLE_KEY=pk_test_default
STRIPE_WEBHOOK_SECRET=whsec_default
STRIPE_CURRENCY=usd
STRIPE_PAYMENT_METHODS=card

# Active payment providers (comma-separated)
ACTIVE_PAYMENT_PROVIDERS=stripe
DEFAULT_PAYMENT_PROVIDER=stripe

# Session settings
AUTH_SESSION_DURATION=24
